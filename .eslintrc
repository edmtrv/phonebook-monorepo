{
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es2021": true,
    "cypress/globals": true
  },
  "plugins": ["cypress"],
  "rules": {
    "semi": ["error", "always"],
    "max-len": [1, 200],
    "no-shadow": 0,
    "no-plusplus": 0,
    "react/jsx-filename-extension": "off",
    "react/prop-types": [
      1,
      {
        "skipUndeclared": true
      }
    ]
  },
  "settings": {
    "react": { "version": "detect" }
  }
}
